@model IEnumerable<GestionCitasMedicas.Models.Tratamiento>

@{
    ViewData["Title"] = "Tratamientos";
}

<style>
    body {
        background-color: #E0F2F1; /* Color de fondo celeste suave */
    }

    .btn-primary {
        background-color: #007BFF; /* Color de botón azul */
        border-color: #007BFF;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Color de botón azul más oscuro al pasar el cursor */
            border-color: #0056b3;
        }

    .table {
        background-color: #FFFFFF; /* Fondo blanco para la tabla */
    }

        .table th,
        .table td {
            vertical-align: middle; /* Alinear contenido verticalmente en las celdas */
        }
</style>

<div class="container">
    <h1 class="display-4">Tratamientos</h1>

    <div class="my-4">
        <a class="btn btn-primary" asp-action="Create"><i class="bi bi-file-earmark-medical"></i> Registrar Nuevo Tratamiento</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="bg-primary text-white">
                <tr>
                    <th scope="col">Paciente</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Instrucciones</th>
                    <th scope="col">Efectos Secundarios</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Paciente.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Instrucciones)</td>
                        <td>@Html.DisplayFor(modelItem => item.EfectosSecundarios)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Volver al Listado de Tratamientos</a>
    </div>
</div>
