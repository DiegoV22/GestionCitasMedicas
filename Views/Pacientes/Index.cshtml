@model IEnumerable<GestionCitasMedicas.Models.Paciente>

@{
    ViewData["Title"] = "Lista de Pacientes";
}

<style>
    body {
        background-color: #E0F2F1; /* Color de fondo celeste suave */
    }

    .btn-primary {
        background-color: #007BFF; /* Color de botón azul */
        border-color: #007BFF;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Color de botón azul más oscuro al pasar el cursor */
            border-color: #0056b3;
        }
</style>

<div class="container">
    <h1 class="display-4">Lista de Pacientes</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create"><i class="bi bi-person-plus"></i> Crear Nuevo Paciente</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="bg-primary text-white">
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Fecha de Nacimiento</th>
                    <th scope="col">Género</th>
                    <th scope="col">Dirección</th>
                    <th scope="col">Datos de Contacto</th>
                    <th scope="col">Historial Médico</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaNacimiento)</td>
                        <td>@Html.DisplayFor(modelItem => item.Genero)</td>
                        <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                        <td>@Html.DisplayFor(modelItem => item.DatosContacto)</td>
                        <td>@Html.DisplayFor(modelItem => item.HistorialMedico)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
